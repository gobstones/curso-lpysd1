program
{
   repeat (7) { Mover(Norte) }
   repeat (9) { Mover(Este) }
   DibujarVelero()
}

procedure DibujarVelero() 
{
 DibujarVelaIzquierda()
 IrDeVIaVD()
 DibujarVelaDerecha()
 IrDeVDaC()
 DibujarCasco()
}

procedure DibujarVelaIzquierda()
{
  repeat (7) { Pintar(); Mover(Oeste) }
  repeat (7) { Pintar(); Mover(Este); Mover(Norte) }
  repeat (7) { Pintar(); Mover(Sur) } 
}

procedure DibujarVelaDerecha()
{
  repeat(6) { Pintar(); Mover(Norte) }
  Mover(Este)
  repeat(3) { Pintar(); Mover(Este); Mover(Sur); Mover(Sur) }
  repeat(4) { Pintar(); Mover(Oeste) }
}

procedure DibujarCasco()
{
  repeat ( 5) { Pintar(); Mover(Este) } 
  repeat ( 2) { Pintar(); Mover(Sur); Mover(Oeste) }
  repeat (11) { Pintar(); Mover(Oeste) } 
  repeat ( 2) { Pintar(); Mover(Oeste); Mover(Norte) }
  repeat (10) { Pintar(); Mover(Este) }   
}

procedure IrDeVIaVD()
{
  Mover(Este); Mover(Este)
}

procedure IrDeVDaC()
{
  Mover(Sur); Mover(Sur)
}